<h2><%= @list.name %></h2>
<p><%= @list.description %></p>

<h3>Stuff to do</h3>

<ul>
	<% @tasks.incomplete.each do |task| %>
	<li>
		<%= task.description %> - <%= button_to "Complete", complete_task_path(@list.id, task.id) %>
		<!-- completed: #{task.completed}" -->
	</li>
	<% end %>
</ul>

<h3>Stuff I've done</h3>

<ul id="completed">
	<% @tasks.completed.each do |task| %>
	<li>
		<%= task.description %>
	</li>
	<% end %>
</ul>

<hr>

<%= form_for [@list, @task] do |form| %>
<p>
	<%= form.text_field :description %>
	<%= form.submit %>
</p>
<% end %>

<hr>

<%= link_to "Back to all lists", lists_url %>