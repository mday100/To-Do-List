<h2><%= @list.name %></h2>
<p><%= @list.description %></p>

<ul>
	<% @list.tasks.each do |task| %>
	<li><%= task.description %> - <%= button_to "Complete", list_task_complete_path(@list) %></li>
	<% end %>
</ul>

<%= form_for [@list, @task] do |form| %>
<p>
	<%= form.text_field :description %>
	<%= form.submit %>
</p>
<% end %>

<hr>

<%= link_to "Back to all lists", lists_url %>